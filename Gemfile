disable_system_gems

only :release do
  gem 'sinatra',        '>=0.9.4'
  gem 'haml',           '~>2.2.0'
  gem 'ruby-openid',    '~>2.1.7'
end

only :test do
  gem 'rack-test',   '~>0.4.0',    :require_as => 'rack/test'
  gem 'webrat',      '~>0.5.0'
  gem 'rspec',                     :require_as => 'spec'
  gem 'randexp'
  gem 'rake'
  gem 'rcov'
  gem 'cucumber'
  gem 'safariwatir', '~>0.3.3'
  gem 'bundler',     '>=0.7.0'
  gem 'ruby-debug'
  gem 'rb-appscript'
end
